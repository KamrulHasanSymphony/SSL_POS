                                    </div>
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>




                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.VATRate)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.VATRate, new { placeholder = "Enter VAT Rate", @class = "form-control form-control-sm", type = "number", step = "any" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.VATRate)
                                </div>

                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.SDRate)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.SDRate, new { placeholder = "Enter SD Rate", @class = "form-control form-control-sm", type = "number", step = "any" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.SDRate)
                                </div>


                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.ImagePath)
