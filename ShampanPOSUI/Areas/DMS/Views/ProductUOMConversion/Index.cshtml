@model ShampanPOS.Models.ProductBatchHistoryVM
@{
    ViewBag.Title = "Product Batch History Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.BranchId)
    @Html.HiddenFor(model => model.IsIndex)
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Purchase Price History List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @*<li class="breadcrumb-item"><a href="/DMS/ProductBatchHistory/Index">Index</a></li>
        <li class="breadcrumb-item active">Index</li>*@
                    <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New" data-url="/DMS/ProductPurchasePriceBatchHistorie/Create?ProductId=@Model.ProductId" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>
            @*<button type="button" title="Delete" class="button sslUnPost btnDelete"> Delete </button>*@
        </div>
    </div>
</div>



<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            @*<h3 class="card-title">
            List Of Data
        </h3>*@

            Product Info
            <span style="font-size:initial;">
                <strong style="color:antiquewhite">
                    : @(!string.IsNullOrEmpty(Model.ProductName) && !string.IsNullOrEmpty(Model.ProductCode) ? $"{Model.ProductName} ({Model.ProductCode})" : "Product (Code)")
                </strong>
            </span>


        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>


@section scripts{

    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/ProductPurchasePriceBatchHistorieController.js"></script>

    <script>
        $(document).ready(function () {

            ProductPurchasePriceBatchHistorieController.init();
        });

    </script>


}


