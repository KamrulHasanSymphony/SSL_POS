@model ShampanPOS.Models.SalePersonMonthlyAchievementVM

@{
    ViewBag.Title = "Monthly Achievement Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .k-dropdown-wrap .k-input {
        line-height: 1.6em !important;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Sale Person Monthly Achievement Entry </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <form id="SalePersonMonthlyAchievement_Form">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"> Sale Person Monthly Achievement Info</h3>
            </div>
            <div class="card-body">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.BranchId)
                @Html.HiddenFor(model => model.Operation)

                <div class="form-group row">

                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.SalePersonId)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.SalePersonId, new { @class = " ", @style = "width:100%" })

                        </div>
                        <span id="titleError1" class="text-danger" style="display:none;"></span>
                    </div>

                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.MonthlySales)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.MonthlySales, new { @class = " dFormat NumericCheck form-control form-control-sm " })

                        </div>
                        @Html.ValidationMessageFor(model => model.MonthlySales)
                    </div>

                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.MonthlyTarget)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.MonthlyTarget, new { @class = " dFormat NumericCheck form-control form-control-sm" })

                        </div>
                        @Html.ValidationMessageFor(model => model.MonthlyTarget)
                    </div>

                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.SelfSaleCommissionRate)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.SelfSaleCommissionRate, new { @class = "dFormat NumericCheck form-control form-control-sm" })

                        </div>
                        @Html.ValidationMessageFor(model => model.SelfSaleCommissionRate)
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.OtherSaleCommissionRate)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.OtherSaleCommissionRate, new { @class = "dFormat NumericCheck form-control form-control-sm" })

                        </div>
                    </div>
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Year)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Year, new { @class = "form-control form-control-sm", placeholder = "Enter Year (2025-2035)" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Year)
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.MonthId)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.MonthId, new { @class = "form-control form-control-sm ", placeholder = "Enter Month (1-12)" })

                        </div>
                        @Html.ValidationMessageFor(model => model.MonthId)
                    </div>
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.MonthStart)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.MonthStart, new { @class = "form-control form-control-sm", placeholder = "Enter January to December" })
                        </div>
                        @Html.ValidationMessageFor(model => model.MonthStart)
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.MonthEnd)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.MonthEnd, new { @class = "form-control form-control-sm", placeholder = "Enter January to December" })
                        </div>
                        @Html.ValidationMessageFor(model => model.MonthEnd)
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="card" style="flex-direction: row; justify-content: space-between; align-items: center;">
    <div class="card-header p-2">

        @if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
        {
            <button type="button" class="button btnsave sslUpdate">Update</button>

            <button style="float: right; margin-left: 5px;" type="button" title="Add New" data-url="/DMS/SalePersonMonthlyAchievement/Create" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>
        }
        else
        {
            <div style="display:none;" class="divUpdate">
                <button type="button" class="button btnsave sslUpdate">Update</button>
                <button style="float: right; margin-left: 5px;" type="button" title="Add New" data-url="/DMS/SalePersonMonthlyAchievement/Create" onclick="GoTo(this)" class="button NewButton addNewButton">
                    New
                </button>
            </div>
            <div class="divSave">
                <button class="button btnsave sslSave" type="button" id="">Save</button>
            </div>
        }

    </div>
    <div class="auditshow"> <img src="~/Content/Images/audit.png" title="Click for Audit" /> </div>
</div>

<div class="card card-secondary auditcard">

    <div class="card-header">
        <h3 class="card-title">Audit Details</h3>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-sm-2">
                <div class="row">
                    @Html.Label("Type")
                </div>
            </div>
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-3">
                        @Html.Label("Created")
                    </div>
                    <div class="col-sm-3">
                        @Html.Label("Updated")
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2">
                <div class="row">
                    <div class="col-sm-12">
                        @Html.Label("By")<br /><div class="clearfix">&nbsp;</div>
                        @Html.Label("On")<br /><div class="clearfix">&nbsp;</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.CreatedBy, new { @class = "CreatedBy  form-control form-control-sm ", @readonly = "readonly" })
                        <div class="clearfix">&nbsp;</div>
                        @Html.TextBoxFor(model => model.CreatedOn, new { @class = "CreatedOn  form-control form-control-sm ", @readonly = "readonly" })
                    </div>

                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.LastModifiedBy, new { @class = "LastUpdateBy  form-control form-control-sm lub", @readonly = "readonly" })
                        <div class="clearfix">&nbsp;</div>
                        @Html.TextBoxFor(model => model.LastModifiedOn, new { @class = "LastUpdateOn  form-control form-control-sm luo", @readonly = "readonly" })
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{

    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/SalePersonMonthlyAchievementController.js"></script>

    <script>
        $(document).ready(function () {

            SalePersonMonthlyAchievementController.init();

        });

    </script>


}
