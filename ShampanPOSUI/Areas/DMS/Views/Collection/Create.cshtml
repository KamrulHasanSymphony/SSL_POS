        <div class="card">
            <div class="card-header p-2">
                <div class="card-body">
                    <div class="form-group row">

                        @*<div class="editor-label">
                                <label>&nbsp;Total Payment Amount</label>
                            </div>
                            <div class="editor-field">
                                <input type="text" class="form-control form-control-sm priceLen NumberCheck text-right" name="PurchaseOrderGrandTotalAmount" id="PurchaseOrderGrandTotalAmount"  />
                            </div>*@


                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.TotalCollectAmount)
                            <div class="input-group">
                                @Html.TextBoxFor(
                                    model => model.TotalCollectAmount,
                                    new
                                    {
                                        @placeholder = "Total Collect Amount",
                                        @class = "form-control form-control-sm text-right NumberCheck priceLen",
