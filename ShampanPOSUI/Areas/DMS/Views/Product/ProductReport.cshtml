@model ShampanPOS.Models.ProductVM
@{
    ViewBag.Title = "Product Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: Arial;
        background: #f2f2f2;
    }

    .report-box {
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        max-width: 900px;
        margin: 20px auto;
        border-radius: 6px;
    }

    .sslPrint {
        background: #17a2b8;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        border: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 13px;
    }

        table th, table td {
            border: 1px solid #777;
            padding: 6px;
        }

        table th {
            background: #e9e9e9;
            font-weight: bold;
        }

    @@media print {
        .sslPrint {
            display: none
        }

        .report-box {
            border: none !important;
            box-shadow: none !important;
        }

        .report-table th {
            width: 180px;
        }

        .report-table td {
            width: 220px;
        }
    }
</style>
<button onclick="window.print()" class="sslPrint" style="float:right;margin:20px 40px 0 0;">
    Print
</button>

<div class="report-box">

    <!-- HEADER -->
    <table style="border:none;">
        <tr>
            <td style="width:140px;border:none;">
                <img src="~/Content/AdminLte/dist/img/logo.png"
                     style="width:230px;height:120px;" />
            </td>
            <td style="text-align:right;border:none;">
                <h3 style="margin:0;">Symphony Softtech Limited</h3>
                <div>69/1 Trhidara Tower</div>
                <div>📞 01612264439</div>
                <div>✉️ symphonysorftech1999@gamil.com</div>
            </td>

        </tr>
    </table>

    <h2 class="text-center"
        style="margin-top:5px;border-top:1px solid #000;border-bottom:1px solid #000;padding:5px 0;">
        PRODUCT INFORMATION
    </h2>

    <!-- PRODUCT INFORMATION -->
    <h3>Product Information</h3>
    <table>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
            <th>Code</th>
            <td>@Model.Code</td>
        </tr>
        <tr>
            <th>Bangla Name</th>
            <td>@Model.BanglaName</td>
            <th>Group</th>
            <td>@Model.ProductGroupName</td>
        </tr>
        <tr>
            <th>HS Code</th>
            <td>@Model.HSCodeNo</td>
            <th>UOM</th>
            <td>@Model.UOMName</td>
        </tr>
    </table>
    <!-- PRICE INFORMATION -->
    <h3>Pricing</h3>
    <table>
        <tr>
            <th>Purchase Price</th>
            <td>@Model.PurchasePrice</td>
            <th>Sale Price</th>
            <td>@Model.SalePrice</td>
        </tr>
        <tr>
            <th>VAT Rate (%)</th>
            <td>@Model.VATRate</td>
            <th>SD Rate (%)</th>
            <td>@Model.SDRate</td>
        </tr>

    </table>

</div>
