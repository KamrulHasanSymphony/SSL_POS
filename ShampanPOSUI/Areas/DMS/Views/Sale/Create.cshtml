@model ShampanPOS.Models.SaleVM
@{
    ViewBag.Title = "Sale Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var serial = 1;
}

<style>
    .k-dropdown-wrap .k-input {
        line-height: 1.6em !important;
    }

    .button.secondary {
        background-color: #adb5bd;
        color: #212529;
        border: 1px solid #adb5bd;
    }
    .dFormat {
        text-align: right;
    }
</style>
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Sale  Entry </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header p-2">

        @if (Model.IsPost)
        {
            <button type="button" class="button sslPush">Already Posted</button>

        }
        else if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
        {
            <button type="button" class="button btnsave sslUpdate">Update</button>

            <button type="button" class="button btnPost sslPost">Post</button>

            <button type="button" class="button secondary" id="btnFromPurchaseOrder">
                <span style="font-weight:bold; margin-right:5px;">+</span> Collection
            </button>
        }
        else
        {
            <div style="display:none;" class="divUpdate">
                <button type="button" class="button btnsave sslUpdate">Update</button>
                <button type="button" class="button btnPost sslPost">Post</button>
            </div>
            <div class="divSave">
                <button class="button btnsave sslSave" type="button" id="">Save</button>
            </div>
        }

    </div>
    </div>



<div class="container-fluid">
    <form id="frmEntry">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"> Sale  Info </h3>
            </div>
            <div class="card-body">

                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Operation)
                @Html.HiddenFor(model => model.DecimalPlace)

                @Html.HiddenFor(model => model.IsPost)
                @Html.HiddenFor(model => model.BranchId)
                @Html.HiddenFor(model => model.TransactionType)

                <div class="form-group row">

                    <div class="col-sm-2 codeWidth">
                        @Html.LabelFor(model => model.Code)
                        <div style="display: flex; align-items: center;">
                            <span id="btnPrevious" class="fa fa-backward" style="color: darkseagreen;"></span>&nbsp;
                            @Html.TextBoxFor(model => model.Code, new { @class = " csCode  form-control form-control-sm", @readonly = "readonly", @style = "width:140px;" }) &nbsp;
                            <span id="btnNext" class="fa fa-forward" style="color: darkseagreen;"></span>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.CustomerId)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.CustomerId, new
                            {
                                @class = "form-control form-control-sm"@*, @readonly = "readonly"*@})
                        </div>
                    </div>
                    <div class="col-sm-2" style="display:none">
                        @Html.LabelFor(model => model.SaleOrderId)
                        <div class="input-group">
                            @*<input type="text" id="PurchaseOrderCode" class="form-control form-control-sm" readonly />*@
                            @Html.TextBoxFor(model => model.SaleOrderId, new { @class = "form-control form-control-sm" })
                        </div>
                    </div>


                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.SaleOrderCode)
                        <div class="input-group">

                            @Html.TextBoxFor(model => model.SaleOrderCode, new
                            {
                                @class = "form-control form-control-sm",
                                @readonly = "readonly"   // ✅ only textbox readonly
                            })

                            <div class="input-group-append">
                                <button type="button"
                                        class="btn btn-outline-primary btn-sm"
                                        id="btnSearchPurchaseOrder">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                        </div>
                    </div>




                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.InvoiceDateTime)
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.InvoiceDateTime, new
                            {
                                @class = "  form-control form-control-sm dateRange"@*, @readonly = "readonly"*@})
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.DeliveryAddress)
                        <div class="input-group">
                            @Html.TextAreaFor(model => model.DeliveryAddress, new
                            {
                                @class = "form-control form-control-sm"@*, @readonly = "readonly"*@})
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Comments)
                        <div class="input-group">
                            @Html.TextAreaFor(model => model.Comments, new
                            {
                                @class = "form-control form-control-sm"@*, @readonly = "readonly"*@})
                        </div>
                    </div>




                    @*<div class="col-sm-2">
            @Html.LabelFor(model => model.DeliveryDate)
            <div class="input-group date">
                @Html.TextBoxFor(model => model.DeliveryDate, new { @class = "  form-control form-control-sm dateRange", @readonly = "readonly" })
                <div class="input-group-append">
                    <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                </div>
            </div>
        </div>*@
                </div>



            </div>
        </div>

        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"> Details </h3>
            </div>
            <div class="card-body">

                <button type="button" title="Add Details" id="addRows" class="btn btn-lg btn-success mb-2"><i class="fa fa-plus"></i></button>

                <div class="clearfix">&nbsp;</div>

                <div style="overflow-x: auto; white-space: nowrap;">
                    <table class="table table-bordered table-striped table-sm" id="details">
                        <thead>
                            <tr>
                                <th data-type="text" data-computed="true" data-required="false" style="width:5%;" data-name="SLNo">SL. No.</th>
                                <th hidden data-type="text" data-search="false" data-required="false" data-computed="true" style="width:20%;" data-name="ProductCode"> Product Code </th>
                                <th data-type="text" data-search="true" data-required="true" style="width:12%;" data-name="ProductName"> Product Name </th>
                                <th hidden data-type="text" data-search="false" style="width:5%;" data-name="ProductId"> ProductId </th>
                                @*<th hidden data-type="text" data-search="false" style="width:5%;" data-name="SaleId"> SaleId </th>
        <th hidden data-type="text" data-search="false" style="width:5%;" data-name="SaleOrderDetailId"> SaleOrderDetailId </th>*@

                                <th data-type="decimal" style="width: 8%;" data-required="true" data-computed="true" data-name="OrderQuantity"> Order Quantity </th>
                                <th data-type="decimal" style="width: 8%;" data-required="true" data-computed="true" data-name="CompletedQty"> Completed Qty </th>
                                <th data-type="decimal" style="width: 8%;" data-required="true" data-computed="true" data-name="RemainQty"> Remain Qty </th>
                                <th data-type="decimal" style="width: 8%;" data-required="true" data-name="Quantity"> Quantity </th>
                                <th data-type="decimal" style="width: 8%;" data-required="true" data-computed="true" data-name="UnitRate"> Unit Rate </th>
                                <th data-type="decimal" style="width: 8%;" data-required="true" data-computed="true" data-name="SubTotal"> SubTotal </th>
                                <th data-type="decimal" style="width: 8%;" data-computed="true" data-name="SD"> SD Rate </th>
                                <th data-type="decimal" style="width: 8%;" data-computed="true" data-name="SDAmount"> SD Amount </th>
                                <th data-type="decimal" style="width: 8%;" data-computed="true" data-name="VATRate"> VAT Rate </th>
                                <th data-type="decimal" style="width: 8%;" data-computed="true" data-name="VATAmount"> VAT Amount </th>
                                <th data-type="decimal" style="width: 8%;" data-computed="true" data-computed="true" data-name="LineTotal"> Line Total </th>


                                @*<th data-type="text" style="width: 10%;">Comments</th>*@

                                <th hidden data-type="text" style="width: 5%;" data-name="SaleOrderId">Sale Order Id</th>
                                <th hidden data-type="text" style="width: 5%;" data-name="SaleOrderDetailId">Sale Order Detail Id</th>
                            </tr>
                        </thead>
                        <tbody id="lst">
                            @if (Model != null)
                            {
                                foreach (var item in Model.saleDetailsList)
                                {
                                    <tr>
                                        <td> @serial </td>
                                        <td hidden> @item.ProductCode </td>

                                        <td> @item.ProductName </td>
                                        <td hidden> @item.ProductId </td>
                                        @*<td hidden> @item.SaleId </td>
                                        <td hidden> @item.SaleOrderDetailId </td>*@
                                        <td class=" dFormat "> @item.OrderQuantity</td>
                                        <td class=" dFormat "> @item.CompletedQty</td>
                                        <td class=" dFormat "> @item.RemainQty</td>
                                        <td class=" dFormat "> @item.Quantity</td>
                                        <td class=" dFormat "> @item.UnitRate</td>
                                        <td class=" dFormat "> @item.SubTotal</td>

                                        <td class=" dFormat "> @item.SD</td>
                                        <td class=" dFormat "> @item.SDAmount</td>
                                        <td class=" dFormat "> @item.VATRate</td>
                                        <td class=" dFormat "> @item.VATAmount</td>
                                        <td class=" dFormat "> @item.LineTotal</td>



                                        @if (item.SaleOrderId > 0)
                                        {
                                            @*<td style="color:blue;cursor:pointer;" class="details-link" data-id="@item.PurchaseOrderId"> @item.POCode </td>*@
                                        }
                                        <td hidden> @item.SaleOrderId </td>
                                        <td hidden> @item.SaleOrderDetailId </td>
                                        @*<td> @item.Comments</td>*@

                                        <td> <button class="btn btn-danger btn-sm remove-row-btn"><i class='fa fa-trash'></i></button> </td>

                                    </tr>

                                    { serial++; }
                                }
                            }


                        </tbody>

                    </table>
                </div>

            </div>
        </div>

        <div class="card">
            <div class="card-header p-2">

                <div class="card-body">
                    <div class="row grndBlock">

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp;Paid Amount </label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("PaidAmount", 0, new { @placeholder = "Paid Amount", @class = " dFormat trGrandTotalAmount form-control form-control-sm   priceLen NumberCheck text-right" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp;SubTotal </label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("SubTotal", 0, new { @placeholder = "SubTotal", @class = " dFormat trGrandSubTotal form-control form-control-sm   priceLen NumberCheck text-right" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp; Total SD</label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("TotalSD", 0, new { @placeholder = "Grand Total SD Amount", @class = "trGrandTotalSDAmount form-control form-control-sm   priceLen NumberCheck text-right" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp; Total VAT  </label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("TotalVAT", 0, new { @placeholder = "Total VAT Amount", @class = "trGrandTotalVATAmount form-control form-control-sm   priceLen NumberCheck text-right" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp; Grand Total</label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("GrandTotal", 0, new { @placeholder = "Grand Total", @class = "trGrandTotal form-control form-control-sm   NumberCheck text-right" })
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>

    </form>


    <div class="card card-secondary auditcard">

        <div class="card-header">
            <h3 class="card-title">Audit Details</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-sm-2">
                    <div class="row">
                        @Html.Label("Type")
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-3">
                            @Html.Label("Created")
                        </div>
                        <div class="col-sm-3">
                            @Html.Label("Updated")
                        </div>
                        <div class="col-sm-3">
                            @Html.Label("Posted")
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <div class="row">
                        <div class="col-sm-12">
                            @Html.Label("By")<br /><div class="clearfix">&nbsp;</div>
                            @Html.Label("On")<br /><div class="clearfix">&nbsp;</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.CreatedBy, new { @class = "CreatedBy  form-control form-control-sm ", @readonly = "readonly" })
                            <div class="clearfix">&nbsp;</div>
                            @Html.TextBoxFor(model => model.CreatedOn, new { @class = "CreatedOn  form-control form-control-sm ", @readonly = "readonly" })
                        </div>

                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.LastModifiedBy, new { @class = "LastUpdateBy  form-control form-control-sm lub", @readonly = "readonly" })
                            <div class="clearfix">&nbsp;</div>
                            @Html.TextBoxFor(model => model.LastModifiedOn, new { @class = "LastUpdateOn  form-control form-control-sm luo", @readonly = "readonly" })
                        </div>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.PostedBy, new { @class = "PostedBy  form-control form-control-sm ", @readonly = "readonly" })<div class="clearfix">&nbsp;</div>
                            @Html.TextBoxFor(model => model.PostedOn, new { @class = "PostedOn  form-control form-control-sm ", @readonly = "readonly" })

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>


<div id="poWindow" style="display:none;">
    <div id="windowGrid"></div>
</div>

@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/SaleController.js"></script>

    <script>
        $(document).ready(function () {

            SaleController.init();
        });

    </script>


}

