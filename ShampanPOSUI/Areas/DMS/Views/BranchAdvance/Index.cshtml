@model ShampanPOS.Models.BranchAdvanceVM
@{
    ViewBag.Title = "Branch Advance Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.HiddenFor(model => model.BranchId)

    @Html.HiddenFor(model => model.IsIndex)
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Branch Advance List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>                    
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New" data-url="/DMS/BranchAdvance/Create?Branchid=@Model.BranchId" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>

            <button type="button" title="Post data" id="btnPost" class="button sslPost"> Post </button>

            @*<button type="button" title="Delete" class="button sslUnPost btnDelete"> Delete </button>*@
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                List Of Data
            </h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>


@section scripts{

    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/BranchAdvanceController.js"></script>

    <script>
        $(document).ready(function () {

            $('#backButton').click(function (event) {
                event.preventDefault();  // Prevent the default link behavior
                window.history.back();   // Go back to the previous page
            });
            BranchAdvanceController.init();

        });

    </script>


}


