@model ShampanPOS.Models.PurchaseVM
@{
    ViewBag.Title = "Purchase Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    body {
        font-family: Arial;
        background: #f2f2f2;
    }

    .report-box {
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        max-width: 900px;
        margin: 20px auto;
        border-radius: 6px;
    }

    .sslPrint {
        background: #17a2b8;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        border: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 13px;
    }

        table th, table td {
            border: 1px solid #777;
            padding: 6px;
        }

        table th {
            background: #e9e9e9;
            font-weight: bold;
        }

    @@media print {
        .sslPrint {
            display: none
        }

        .report-box {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>

<button onclick="window.print()" class="sslPrint" style="float:right;margin:20px;">
    <i class="k-icon k-i-print"></i> Print
</button>

<div class="report-box">

    <!-- HEADER -->
    <table style="border:none;">
        <tr>
            <td style="width:140px;">
                <img src="~/Content/AdminLte/dist/img/logo.png"
                     style="width:130px;height:70px;object-fit:contain;" />
            </td>
            @*<td style="text-align:right;border:none;">
            <h3 style="margin:0;">@Model.CompanyName</h3>
            <div>@Model.BranchName</div>
        </td>*@
        </tr>
    </table>

    <h2 style="text-align:center;border-bottom:1px solid #000;">
        PURCHASE REPORT
    </h2>

    <!-- PURCHASE MASTER INFO -->
    <h3>Purchase Information</h3>
    <table>
        <tr>
            <th>Purchase Code</th>
            <td>@Model.Code</td>
            <th>Invoice Date</th>
            <td>@Model.InvoiceDateTime</td>
        </tr>
        <tr>
            <th>Purchase Date</th>
            <td>@Model.PurchaseDate</td>
            <th>Supplier</th>
            <td>@Model.SupplierName</td>
        </tr>
        <tr>
            <th>Purchase Order</th>
            <td>@Model.PurchaseOrderCode</td>
            <th>B/E Number</th>
            <td>@Model.BENumber</td>
        </tr>
        <tr>
            <th>Fiscal Year</th>
            <td>@Model.FiscalYear</td>
            <th>Period</th>
            <td>@Model.PeriodId</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td colspan="3">@Model.Comments</td>
        </tr>
    </table>

    <!-- PURCHASE DETAILS -->
    <h3>Purchase Items</h3>
    <table>
        <thead>
            <tr>
                <th style="width:40px;">SL</th>
                <th>Product</th>
                <th>Code</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>SD Amt</th>
                <th>VAT Amt</th>
                <th>Line Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.purchaseDetailList)
            {
                <tr>
                    <td>@item.Line</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductCode</td>
                    <td class="text-right">@item.Quantity</td>
                    <td class="text-right">@item.UnitPrice</td>
                    <td class="text-right">@item.SDAmount</td>
                    <td class="text-right">@item.VATAmount</td>
                    <td class="text-right">@item.LineTotal</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- SUMMARY -->
    <h3>Summary</h3>
    <table>
        <tr>
            <th>Sub Total</th>
            <td class="text-right">@Model.SubTotal</td>
        </tr>
        <tr>
            <th>Total SD</th>
            <td class="text-right">@Model.TotalSD</td>
        </tr>
        <tr>
            <th>Total VAT</th>
            <td class="text-right">@Model.TotalVAT</td>
        </tr>
        <tr>
            <th>Grand Total</th>
            <td class="text-right">@Model.GrandTotal</td>
        </tr>
        <tr>
            <th>Paid Amount</th>
            <td class="text-right">@Model.PaidAmount</td>
        </tr>
    </table>

    <!-- POST -->
    @*<h3>Posting Information</h3>
    <table>
        <tr>
            <th>Posted</th>
            <td>@(Model.IsPost ? "Yes" : "No")</td>
            <th>Posted By</th>
            <td>@Model.PostedBy</td>
        </tr>
        <tr>
            <th>Posted On</th>
            <td>@Model.PostedOn</td>
            <th>Transaction Type</th>
            <td>@Model.TransactionType</td>
        </tr>
    </table>*@

</div>


