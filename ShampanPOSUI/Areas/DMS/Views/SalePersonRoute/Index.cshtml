@model ShampanPOS.Models.SalePersonRouteVM
@{
    ViewBag.Title = "Sale Person Route Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    @Html.HiddenFor(model => model.SalePersonId)
    @Html.HiddenFor(model => model.RouteId)
    @Html.HiddenFor(model => model.IsIndex)
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Sale Person Route List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/DMS/SalePersonRoute/Index">Index</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New" data-url="/DMS/SalePersonRoute/Create?SalePersonId=@Model.SalePersonId" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>
            <button type="button" title="Delete" class="button sslUnPost btnDelete"> Delete </button>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                List Of Data
            </h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>


@section scripts{

    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/SalePersonRouteController.js"></script>

    <script>
        $(document).ready(function () {

            SalePersonRouteController.init();
        });

    </script>


}


