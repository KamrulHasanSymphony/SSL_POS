
@model ShampanPOS.Models.FocalPointVM

@{
    ViewData["Title"] = "Focal Point Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Focal Point List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @*<li class="breadcrumb-item"><a href="/DMS/FocalPoint/Index">Index</a></li>
                        <li class="breadcrumb-item active">Index</li>*@
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New"
                    data-url="/DMS/FocalPoint/Create" onclick="GoTo(this)"
                    id="" class="button NewButton addNewButton">
                New
            </button>
            <button type="button" title="Delete" class="button sslUnPost btnDelete"> Delete </button>

        </div>
    </div>
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                List Of Data
            </h3>

        </div>
        <div class="card-body">
            <div id="FocalPointGrid"></div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/FocalPointController.js"></script>
    <script>
        $(document).ready(function () {
            FocalPointController.init();
        });
    </script>
}




