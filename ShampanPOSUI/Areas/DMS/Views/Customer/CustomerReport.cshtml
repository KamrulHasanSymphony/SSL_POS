@model ShampanPOS.Models.CustomerVM
@{
    ViewBag.Title = "Customer Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial;
        background: #f2f2f2;
    }

    .report-box {
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        max-width: 900px;
        margin: 20px auto;
        border-radius: 6px;
    }

    .sslPrint {
        background: #17a2b8;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        border: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 18px;
        font-size: 13px;
    }

        table th, table td {
            border: 1px solid #777;
            padding: 6px;
        }

        table th {
            background: #e9e9e9;
            font-weight: bold;
            width: 20%;
        }

    @@media print {
        .sslPrint {
            display: none
        }

        .report-box {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>

<button onclick="window.print()" class="sslPrint" style="float:right;margin:20px;">
    <i class="k-icon k-i-print"></i> Print
</button>

<div class="report-box">

    <!-- HEADER -->
    <table style="border:none;">
        <tr>
            <td style="width: 140px; border: none;">
                <img src="~/Content/AdminLte/dist/img/logo.png"
                     style="width:130px;height:70px;object-fit:contain;" />
            </td>
            @*<td style="text-align:right;border:none;">
            <h3 style="margin:0;">@Model.CompanyName</h3>
            <div>@Model.Address1</div>
            <div>📞 @Model.TelephoneNo</div>
            <div>✉️ @Model.Email</div>
        </td>*@
        </tr>
    </table>

    <h2 style="text-align:center;border-bottom:1px solid #000;">
        CUSTOMER REPORT
    </h2>

    <!-- BASIC INFORMATION -->
    <h3>Customer Information</h3>
    <table>
        <tr>
            <th>Code</th>
            <td>@Model.Code</td>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Bangla Name</th>
            <td>@Model.BanglaName</td>
            <th>Customer Group</th>
            <td>@Model.CustomerGroupName</td>
        </tr>
    </table>

    <!-- ADDRESS INFORMATION -->
    <h3>Address Information</h3>
    <table>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
            <th>Bangla Address</th>
            <td>@Model.BanglaAddress</td>
        </tr>
    </table>

    <!-- CONTACT INFORMATION -->
    <h3>Contact Information</h3>
    <table>
        <tr>
            <th>Telephone</th>
            <td>@Model.TelephoneNo</td>
            <th>Fax</th>
            <td>@Model.FaxNo</td>
        </tr>
        <tr>
            <th>Email</th>
            <td colspan="3">@Model.Email</td>
        </tr>
    </table>

    <!-- IDENTIFICATION -->
    <h3>Identification</h3>
    <table>
        <tr>
            <th>TIN No</th>
            <td>@Model.TINNo</td>
            <th>BIN No</th>
            <td>@Model.BINNo</td>
        </tr>
        <tr>
            <th>NID No</th>
            <td colspan="3">@Model.NIDNo</td>
        </tr>
    </table>

    <!-- STATUS -->
    <h3>Status</h3>
    <table>
        <tr>
            <th>Active</th>
            <td>@(Model.IsActive ? "Yes" : "No")</td>
            <th>Archived</th>
            <td>@(Model.IsArchive ? "Yes" : "No")</td>
        </tr>
    </table>

</div>


