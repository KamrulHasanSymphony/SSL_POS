@model ShampanPOS.Models.SaleDeliveryVM
@{
    ViewBag.Title = "Invoice Sale Delivery Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Delivery List </h1>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="accordion" id="filterAccordion">
        <div class="card">

            <div class="card-header p-2" id="filtersHeading">
                <div class="card card-primary">
                    <div class="card-header" id="responseTab">
                        <h3 class="card-title" data-bs-toggle="collapse" data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filtersCollapse">Filters</h3>
                    </div>
                </div>
            </div>

            <div id="filtersCollapse" class="collapse" aria-labelledby="filtersHeading" data-bs-parent="#filterAccordion">
                <div class="card-body p-2">

                    @Html.HiddenFor(model => model.BranchId)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group row">
                        <div class="col-sm-3 col-lg-3">
                            @Html.LabelFor(model => model.Branchs)
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Branchs, new { @class = "KDropDown", @placeholder = "Select Branch...", @validationmessage = "*", @Style = "height: 33px !important" })
                                @Html.ValidationMessageFor(model => model.Branchs)
                            </div>
                        </div>
                        <div class="col-sm-3 col-lg-3">
                            @Html.LabelFor(model => model.FromDate)
                            <div class="input-group date">
                                @Html.TextBoxFor(model => model.FromDate, new { @class = " ", @Style = "Width:100% !important" })
                            </div>
                        </div>

                        <div class="col-sm-3  col-lg-3">
                            @Html.LabelFor(model => model.ToDate)
                            <div class="input-group date">
                                @Html.TextBoxFor(model => model.ToDate, new { @class = " ", @Style = "Width:100% !important" })
                            </div>
                        </div>

                        <div class="col-sm-2  col-lg-2" style="margin-top: 29px;">
                            <button type="button" id="indexSearch" class="btn btn-primary btn-sm" style="height:33px;">
                                Search
                            </button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                List Of Data
            </h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/InvoiceWiseSaleDeliveryController.js"></script>

    <script>
        $(document).ready(function () {
            $("#FromDate").kendoDatePicker({
                format: "yyyy-MM-dd",
                value: new Date() // sets current date as default
            });

            $("#ToDate").kendoDatePicker({
                format: "yyyy-MM-dd",
                value: new Date() // sets current date as default
            });
            InvoiceWiseSaleDeliveryController.init();
            var message = '@(TempData["Message"])';
            if (message) {
                alert(message);
                window.close();
            }
        });

    </script>


}