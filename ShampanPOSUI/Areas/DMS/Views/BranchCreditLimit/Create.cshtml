<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Branch Credit Limit Entry </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="container-fluid">
    <form id="frmEntry">
        <div class="card card-secondary">
            <div class="card-header">
                <span style="font-size:initial;">
                    <strong style="color:antiquewhite">
                        @(!string.IsNullOrEmpty(Model.BranchName) && !string.IsNullOrEmpty(Model.BranchCode) ? $"{Model.BranchName} ({Model.BranchCode})" : "Branch (Code)")
                    </strong>
                </span>
                Credit Limit Info
            </div>
            <div class="card-body">

                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Operation)
                @Html.HiddenFor(model => model.IsIndex)
                @Html.HiddenFor(model => model.BranchId)


                <div class="form-group row">


                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.LimitEntryDate)
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.LimitEntryDate, new { @class = "  form-control form-control-sm dateRange" })
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.SelfCreditLimit)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.SelfCreditLimit, new { @class = " dFormat NumericCheck form-control form-control-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.SelfCreditLimit)

                    </div>

                    @*<div class="col-sm-2">
                            @Html.LabelFor(model => model.BranchId)
