</div>

<div class="container-fluid">
    <form id="frmEntry">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"> Purchase Info </h3>
            </div>
            <div class="card-body">

                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Operation)
                @Html.HiddenFor(model => model.IsPost)
                @Html.HiddenFor(model => model.DecimalPlace)
                @Html.HiddenFor(model => model.UOMId)
                @Html.HiddenFor(model => model.BranchId)
                @Html.HiddenFor(model => model.TransactionType)
                @Html.HiddenFor(model => model.PurchaseOrderId)
                @Html.HiddenFor(model => model.FromDate)

                <div class="form-group row">

                    <div class="col-sm-2 codeWidth">
                        @Html.LabelFor(model => model.Code)
                        <div style="display: flex; align-items: center;">
                            <span id="btnPrevious" class="fa fa-backward" style="color: darkseagreen;"></span>&nbsp;
                            @Html.TextBoxFor(model => model.Code, new { placeholder = "Code Auto Generate", @class = " csCode  form-control form-control-sm", @readonly = "readonly", @style = "width:140px;" }) &nbsp;
                            <span id="btnNext" class="fa fa-forward" style="color: darkseagreen;"></span>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.InvoiceDateTime)
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.InvoiceDateTime, new { @class = "  form-control form-control-sm dateRange" })
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.PurchaseDate)
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.PurchaseDate, new { @class = "  form-control form-control-sm dateRange" })
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.SupplierId)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.SupplierId, new { @class = "form-control form-control-sm" })
                        </div>
                        <span id="titleError1" class="text-danger" style="display:none;"></span>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.CurrencyId)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.CurrencyId, new { @class = "form-control form-control-sm" })
                        </div>
                        <span id="titleError2" class="text-danger" style="display:none;"></span>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.BENumber)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.BENumber, new { placeholder = "Enter Challan Number", @class = "form-control form-control-sm" })
                        </div>
                        <span id="titleError1" class="text-danger" style="display:none;"></span>

                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.ImportIDExcel)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.ImportIDExcel, new { placeholder = "Enter Import Excel Id", @class = "form-control form-control-sm" })
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.CustomHouse)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.CustomHouse, new { placeholder = "Enter Custom House", @class = "form-control form-control-sm" })
                        </div>
                    </div>

                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Comments)
                        <div class="input-group">
                            @Html.TextAreaFor(model => model.Comments, new { placeholder = "Enter Comment", @class = "form-control form-control-sm" })
                        </div>
                    </div>

                </div>

            </div>
        </div>

        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"> Details </h3>
            </div>
            <div class="card-body">

                <button type="button" title="Add Details" id="addRows" class="btn btn-lg btn-success mb-2"><i class="fa fa-plus"></i></button>

                <div style="overflow-x: auto; white-space: nowrap;">
                    <table class="table table-bordered table-striped table-sm" id="details">
                        <thead>
                            <tr>
                                <th data-type="text" data-computed="true" data-required="false" style="width:5%;" data-name="SLNo">SL. No.</th>
                                <th hidden data-type="text" data-search="false" data-required="false" data-computed="true" style="width:20%;" data-name="ProductCode"> Product Code </th>
                                <th data-type="text" data-search="true" data-required="true" style="width:20%;" data-name="ProductName"> Product Name </th>
                                <th hidden data-type="text" data-search="false" style="width:5%;" data-name="ProductId"> ProductId </th>
                                <th data-type="text" data-search="true" data-computed="false" data-required="true" style="width:8%;" data-name="UOMName"> UOM </th>
                                <th hidden data-type="text" data-search="false" style="width:5%;" data-name="UOMId"> UOMId </th>
                                <th data-type="decimal" style="width: 10%;" data-required="true" data-name="CtnQuantity">Ctn Qty </th>
                                <th data-type="decimal" style="width: 10%;" data-required="true" data-name="InputQuantity"> Input Qty </th>
                                <th data-type="decimal" style="width: 10%;" data-required="true" data-computed="true" data-name="PcsQuantity"> Pcs Qty </th>
                                <th data-type="decimal" style="width: 10%;" data-required="true" data-computed="true" data-name="Quantity"> Total Qty </th>
                                <th data-type="decimal" style="width: 10%" data-required="true" data-computed="false" data-name="UnitPrice"> Unit Price </th>
                                <th data-type="decimal" style="width: 13%;" data-required="true" data-computed="true" data-name="SubTotal"> SubTotal </th>
                                <th hidden data-type="decimal" style="width: 8%;" data-computed="true" data-name="SD"> SD Rate </th>
                                <th hidden data-type="decimal" style="width: 8%;" data-computed="true" data-name="SDAmount"> SD Amount </th>
                                <th hidden data-type="decimal" style="width: 8%;" data-computed="true" data-name="VATRate"> VAT Rate </th>
                                <th hidden data-type="decimal" style="width: 8%;" data-computed="true" data-name="VATAmount"> VAT Amount </th>
                                <th hidden data-type="decimal" style="width: 8%;" data-computed="false" data-name="OthersAmount"> Others Amount </th>
                                <th data-type="decimal" style="width: 8%;" data-computed="true" data-name="LineTotal"> Line Total </th>

                                <th data-type="text" style="width: 15%;" data-name="Comments">Comments</th>
                                <th hidden data-type="text" style="width: 5%;" data-name="UOMConversion">UOMConversion</th>
                                @if (Model.PurchaseOrderId > 0)
                                {
                                    <th data-type="text" data-search="false" data-required="false" data-computed="true" style="width:10%;" data-name="POCode"> Purchase Order Code </th>
                                }

                                <th hidden data-type="text" style="width: 5%;" data-name="PurchaseOrderId">PurchaseOrderId</th>
                                <th hidden data-type="text" style="width: 5%;" data-name="PurchaseOrderDetailId">PurchaseOrderDetailId</th>

                            </tr>
                        </thead>
                        <tbody id="lst">
                            @if (Model != null)
                            {
                                foreach (var item in Model.purchaseDetailList)
                                {
                                    <tr>
                                        <td> @serial </td>
                                        <td hidden> @item.ProductCode </td>
                                        <td> @item.ProductName </td>
                                        <td hidden> @item.ProductId </td>
                                        <td> @item.UOMName </td>
                                        <td hidden> @item.UOMId </td>
                                        <td class=" dFormat "> @item.CtnQuantity </td>
                                        <td class=" dFormat "> @item.InputQuantity </td>
                                        <td class=" dFormat "> @item.PcsQuantity </td>
                                        <td class="dFormat"> @item.Quantity </td>
                                        <td class="dFormat"> @item.UnitPrice </td>
                                        <td class="dFormat"> @item.SubTotal </td>
                                        <td hidden class="dFormat"> @item.SD </td>
                                        <td hidden class="dFormat"> @item.SDAmount </td>
                                        <td hidden class="dFormat"> @item.VATRate </td>
                                        <td hidden class="dFormat"> @item.VATAmount </td>
                                        <td hidden class="dFormat"> @item.OthersAmount </td>
                                        <td class="dFormat"> @item.LineTotal </td>
                                        <td> @item.Comments </td>
                                        <td hidden> @item.UOMConversion</td>

                                        @if (item.PurchaseOrderId > 0)
                                        {
                                            <td style="color:blue;cursor:pointer;" class="details-link" data-id="@item.PurchaseOrderId"> @item.POCode </td>
                                        }
                                        <td hidden> @item.PurchaseOrderId </td>
                                        <td hidden> @item.PurchaseOrderDetailId </td>
                                        <td>
                                            <button class="btn btn-danger btn-sm remove-row-btn">
                                                <i class='fa fa-trash'></i>
                                            </button>
                                        </td>
                                    </tr>

                                    { serial++; }
                                }
                            }

                        </tbody>

                    </table>
                </div>

            </div>
        </div>

        <div class="card">
            <div class="card-header p-2">

                <div class="card-body">
                    <div class="row grndBlock">

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp;Grand Total Quantity </label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("GrandTotalAmount", 0, new { @placeholder = "Grand Total Amount", @class = " dFormat trGrandTotalAmount form-control form-control-sm   priceLen NumberCheck text-right", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp;Grand SubTotal </label>
                            </div>
                            <div class="editor-field">
