                                        @Html.TextBoxFor(model => model.Mobile, new { placeholder = "Enter Mobile Number" , @class = "form-control form-control-sm", type = "number", @oninput = "this.value = this.value.replace(/[^0-9]/g, '')" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Mobile)
                                </div>
                            </div>

                            <div class="form-group row">


                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.EmailAddress)
