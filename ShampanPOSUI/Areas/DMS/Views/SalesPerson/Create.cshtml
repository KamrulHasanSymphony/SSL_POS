    }

</div>


@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/SalesPersonController.js"></script>
    <script>
        $(document).ready(function () {

            $(function () {
                $("#tabs").tabs();
            });

            $('ul.tab-list li').on('click', function () {
                var tab_id = $(this).find('a').attr('data-tab');

                $('ul.tab-list li a').removeClass('active');
                $('.tab-content').removeClass('active');

                $(this).find('a').addClass('active');
                $('#tabs-' + tab_id).addClass('active');
            });

            $("#IsActive").bootstrapSwitch();
            SalesPersonController.init();
        });
    </script>
}
