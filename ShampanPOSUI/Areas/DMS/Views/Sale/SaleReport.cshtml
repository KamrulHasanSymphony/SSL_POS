@model ShampanPOS.Models.SaleVM
@{
    ViewBag.Title = "Sale Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial;
        background: #f2f2f2;
    }

    .report-box {
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        max-width: 900px;
        margin: 20px auto;
        border-radius: 6px;
    }

    .sslPrint {
        background: #17a2b8;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        border: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 13px;
    }

        table th, table td {
            border: 1px solid #777;
            padding: 6px;
        }

        table th {
            background: #e9e9e9;
            font-weight: bold;
        }

    .text-right {
        text-align: right;
    }

    @@media print {
        .sslPrint {
            display: none
        }

        .report-box {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>

<button onclick="window.print()" class="sslPrint" style="float:right;margin:20px;">
    <i class="k-icon k-i-print"></i> Print
</button>

<div class="report-box">

    <!-- HEADER -->
    <table style="border:none;">
        <tr>
            <td style="width:140px;border:none;">
                <img src="~/Content/AdminLte/dist/img/logo.png"
                     style="width:230px;height:120px;" />
            </td>
            <td style="text-align:right;border:none;">
                <h3 style="margin:0;">@Model.CompanyName Symphony Softtech Limited</h3>
                <div style="font-size:16px;">@Model.BranchName</div>
                <div>@Model.BranchAddress 69/1 Trhidara Tower</div>
                <div>📞 01612264439</div>
                <div>✉️ symphonysorftech1999@gamil.com</div>
            </td>

        </tr>
    </table>

    <h2 style="text-align:center;border-bottom:1px solid #000;">
        SALES REPORT
    </h2>

    <!-- SALES MASTER INFO -->
    <h3>Sales Information</h3>
    <table>
        <tr>
            <th>Sales Code</th>
            <td>@Model.Code</td>
            <th>Invoice Date</th>
            <td>@Model.InvoiceDateTime</td>
        </tr>
        <tr>
            <th>Customer</th>
            <td>@Model.CustomerName</td>
            <th>Sales Order</th>
            <td>@Model.SaleOrderCode</td>
        </tr>
        <tr>
            <th>Delivery Address</th>
            <td colspan="3">@Model.DeliveryAddress</td>
        </tr>
        <tr>
            <th>Period</th>
            <td>@Model.PeriodId</td>
            <th>Transaction Type</th>
            <td>@Model.TransactionType</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td colspan="3">@Model.Comments</td>
        </tr>
    </table>

    <!-- SALES DETAILS -->
    <h3>Sales Items</h3>
    <table>
        <thead>
            <tr>
                <th style="width:40px;">SL</th>
                <th>Product</th>
                <th>Code</th>
                <th>Qty</th>
                <th>Unit Rate</th>
                <th>SD Amt</th>
                <th>VAT Amt</th>
                <th>Line Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.saleDetailsList)
            {
                <tr>
                    <td>@item.Line</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductCode</td>
                    <td class="text-right">@item.Quantity</td>
                    <td class="text-right">@item.UnitRate</td>
                    <td class="text-right">@item.SDAmount</td>
                    <td class="text-right">@item.VATAmount</td>
                    <td class="text-right">@item.LineTotal</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- SUMMARY -->
    <h3>Summary</h3>
    <table>
        <tr>
            <th>Sub Total</th>
            <td class="text-right">@Model.SubTotal</td>
        </tr>
        <tr>
            <th>Total SD</th>
            <td class="text-right">@Model.TotalSD</td>
        </tr>
        <tr>
            <th>Total VAT</th>
            <td class="text-right">@Model.TotalVAT</td>
        </tr>
        <tr>
            <th>Grand Total</th>
            <td class="text-right">@Model.GrandTotal</td>
        </tr>
        <tr>
            <th>Paid Amount</th>
            <td class="text-right">@Model.PaidAmount</td>
        </tr>
    </table>

</div>
