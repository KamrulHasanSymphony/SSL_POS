                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp; Grand Total SD Amount </label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("GrandTotalSDAmount", 0, new { @placeholder = "Grand Total SD Amount", @class = "trGrandTotalSDAmount form-control form-control-sm   priceLen NumberCheck text-right", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp; Grand Total VAT Amount </label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("GrandTotalVATAmount", 0, new { @placeholder = "Grand Total VAT Amount", @class = "trGrandTotalVATAmount form-control form-control-sm   priceLen NumberCheck text-right", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="editor-label">
                                <label>&nbsp; Grand Line Total</label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("GrandTotal", 0, new { @placeholder = "Grand Line Total", @class = "trGrandTotal form-control form-control-sm   NumberCheck text-right", @readonly = "readonly" })
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>


    </form>

