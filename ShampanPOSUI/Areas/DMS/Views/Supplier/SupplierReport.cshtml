@model ShampanPOS.Models.SupplierVM
@{
    ViewBag.Title = "Supplier Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: Arial;
        background: #f2f2f2;
    }

    .report-box {
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        max-width: 900px;
        margin: 20px auto;
        border-radius: 6px;
    }

    .sslPrint {
        background: #17a2b8;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        border: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 13px;
    }

        table th, table td {
            border: 1px solid #777;
            padding: 6px;
        }

        table th {
            background: #e9e9e9;
            font-weight: bold;
        }

    @@media print {
        .sslPrint {
            display: none
        }

        .report-box {
            border: none !important;
            box-shadow: none !important;
        }

        .report-table th {
            width: 180px;
        }

        .report-table td {
            width: 220px;
        }
    }
</style>
<button onclick="window.print()" class="sslPrint" style="float:right;margin:20px 40px 0 0;">
    Print
</button>

<div class="report-box">

    <!-- HEADER -->
    <table style="border:none;">
        <tr>
            <td style="width:140px;border:none;">
                <img src="~/Content/AdminLte/dist/img/logo.png"
                     style="width:230px;height:120px;" />
            </td>
            <td style="text-align:right;border:none;">
                <h3 style="margin:0;">Symphony Softtech Limited</h3>
                <div>69/1 Trhidara Tower</div>
                <div>📞 01612264439</div>
                <div>✉️ symphonysorftech1999@gamil.com</div>
            </td>

        </tr>
    </table>

    <h2 class="text-center"
        style="margin-top:5px;border-top:1px solid #000;border-bottom:1px solid #000;padding:5px 0;">
        Supplier INFORMATION
    </h2>
    <!-- SUPPLIER INFORMATION (SAME AS PRODUCT INFORMATION) -->
    <h3>Supplier Information</h3>
    <table>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
            <th>Code</th>
            <td>@Model.Code</td>
        </tr>
        <tr>
            <th>Bangla Name</th>
            <td>@Model.BanglaName</td>
            <th>Group</th>
            <td>@Model.SupplierGroupName</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
    </table>
    <!-- CONTACT INFORMATION (SAME AS PRICING SECTION) -->
    <h3>Contact Information</h3>
    <table>
        <tr>
            <th>Telephone</th>
            <td>@Model.TelephoneNo</td>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Contact Person</th>
            <td colspan="3">@Model.ContactPerson</td>
        </tr>
    </table>

</div>