@model ShampanPOS.Models.PurchaseOrderVM
@{
    ViewBag.Title = " From Purchase Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> From Purchase Order Data List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Selection" id="btnSelect" class="button select"> Select </button>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                List Of Data
            </h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Areas/DMS/js/Controllers/FromPurchaseOrderController.js"></script>

    <script>
        $(document).ready(function () {

            FromPurchaseOrderController.init();
            var message = '@(TempData["message"])';
            if (message)
            {
                ShowNotification(3, message);
            }

        });

    </script>


}


