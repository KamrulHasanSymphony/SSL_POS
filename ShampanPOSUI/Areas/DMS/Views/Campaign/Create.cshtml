                                            <td class=" dFormat "> @item.DiscountRateBasedOnUnitPrice</td>

                                            <td> <button class="btn btn-danger btn-sm remove-row-btn"><i class='fa fa-trash'></i></button> </td>
                                        </tr>

                                        { serial++; }
                                    }
                                }


                            </tbody>

                        </table>
                    </div>

                </div>
            </div>

        }

        else if (Model.EnumName == "CampaignByProductTotalValue")
        {
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title"> Details </h3>
                </div>
                <div class="card-body">

                    <button type="button" title="Add Details" id="addRows" class="btn btn-lg btn-success mb-2"><i class="fa fa-plus"></i></button>

                    <div class="clearfix">&nbsp;</div>

                    <div style="overflow-x: auto; white-space: nowrap;">
                        <table class="tblCIV table table-bordered table-striped table-sm" id="details">
                            <thead>
                                <tr>
                                    <th data-type="text" data-computed="true" data-required="false" style="width:5%;" data-name="SLNo">SL. No.</th>
                                    <th data-type="text" data-search="true" data-required="true" style="width: 30%;" data-name="CustomerName"> Customer Name </th>
                                    <th hidden data-type="text" data-search="false" style="width:5%;" data-name="CustomerId"> CustomerId </th>
                                    <th data-type="text" data-search="true" data-required="true" style="width: 30%; " data-name="ProductName"> Product Name </th>
                                    <th hidden data-type="text" data-search="false" style="width:5%;" data-name="ProductId"> ProductId </th>
                                    <th data-type="decimal" style="width: 10%;" data-required="true" data-name="FromAmount"> From Amount </th>
                                    <th data-type="decimal" style="width: 10%;" data-required="true" data-name="ToAmount"> To Amount </th>
                                    <th data-type="decimal" style="width: 10%;" data-required="true" data-name="DiscountRateBasedOnTotalPrice"> Discount Rate (%) </th>


                                </tr>
                            </thead>
                            <tbody id="lst">
                                @if (Model != null)
                                {
                                    foreach (var item in Model.campaignDetailByProductTotalValue)
                                    {
                                        <tr>
                                            <td> @serial </td>
                                            <td> @item.CustomerName </td>
                                            <td hidden> @item.CustomerId </td>
                                            <td> @item.ProductName </td>
                                            <td hidden> @item.ProductId </td>
                                            <td class=" dFormat "> @item.FromAmount</td>
                                            <td class=" dFormat "> @item.ToAmount</td>
                                            <td class=" dFormat "> @item.DiscountRateBasedOnTotalPrice</td>

                                            <td> <button class="btn btn-danger btn-sm remove-row-btn"><i class='fa fa-trash'></i></button> </td>
                                        </tr>

