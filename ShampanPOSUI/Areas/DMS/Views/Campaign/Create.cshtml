                                }


                            </tbody>

                        </table>
                    </div>

                </div>
            </div>

        }

        else if (Model.EnumName == "CampaignByInvoiceValue")
        {
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title"> Details </h3>
                </div>
                <div class="card-body">

                    <button type="button" title="Add Details" id="addRows" class="btn btn-lg btn-success mb-2"><i class="fa fa-plus"></i></button>

                    <div class="clearfix">&nbsp;</div>

