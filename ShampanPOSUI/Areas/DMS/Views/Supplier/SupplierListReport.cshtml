
@model List<ShampanPOS.Models.SupplierVM>

@{
    ViewBag.Title = "Supplier Report";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@{
    var groupName = Model.FirstOrDefault()?.ByGroup == "All" ? "All" : Model.FirstOrDefault()?.SupplierGroupName ?? "N/A";
}
<style>
    body {
        font-family: Arial;
        background: #f2f2f2;
    }

    .report-box {
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        max-width: 1100px;
        margin: 20px auto;
        border-radius: 6px;
    }

    .sslPrint {
        background: #17a2b8;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        border: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
    }

        table th, table td {
            border: 1px solid #777;
            padding: 6px;
            text-align: left;
        }

        table th {
            background: #e9e9e9;
            font-weight: bold;
            text-align: center;
        }

    @@media print {
        .sslPrint {
            display: none;
        }

        .report-box {
            border: none !important;
        }
    }
</style>

<button onclick="window.print()" class="sslPrint" style="float:right;margin:20px;">
    <i class="k-icon k-i-print"></i> Print
</button>

<div class="report-box">

    <!-- HEADER -->
    <table style="border:none;margin-bottom:10px;">
        <tr>
            <td style="width:140px;border:none;">
                <img src="~/Content/AdminLte/dist/img/logo.png"
                     style="width:230px;height:120px;" />
            </td>
            <td style="text-align:right;border:none;">
                <h3 style="margin:0;">Symphony Softtech Limited</h3>
                <div>69/1 Trhidara Tower</div>
                <div>📞 01612264439</div>
                <div>✉️ symphonysorftech1999@gamil.com</div>
            </td>
        </tr>
    </table>

    <div style="width:100%; position:relative; margin-bottom:10px;">

        <!-- Center Title -->
        <h2 style="
            text-align:center;
            margin:0;
            padding-bottom:5px;
            border-bottom:1px solid #000;
            font-weight:normal;">
            SUPPLIER REPORT
        </h2>

        <!-- Right side group name -->
        <div style="
         position:absolute;
         right:0;
         bottom:5px;
         font-size:14px;">
            <strong>Supplier Group:</strong> @groupName <br />
        </div>
    </div>
    <!-- ALL SUPPLIERS IN ONE TABLE -->
    <table>
        <thead>
            <tr>
                <th>SL</th>
                <th>Code</th>
                <th>Name</th>
                <th>Bangla Name</th>
                <th>Group</th>
                <th>Address</th>
                <th>City</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Contact Person</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int sl = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center;">@sl</td>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.BanglaName</td>
                        <td>@item.SupplierGroupName</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.TelephoneNo</td>
                        <td>@item.Email</td>
                        <td>@item.ContactPerson</td>
                    </tr>
                    sl++;
                }
            }
            else
            {
                <tr>
                    <td colspan="11" style="text-align:center;">
                        No supplier found
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Footer -->
    <table style="border:none;margin-bottom:10px;">
        <tr>
            <td style="border:none;"></td>
            <td style="border:none;text-align:right;">
                <br /><strong>Total Supplier:</strong> @Model.Count
            </td>
        </tr>
    </table>
</div>