@model ShampanPOS.Models.MISReportVM
@{
    ViewBag.Title = "CreatePartial";
}


<div class="container-fluid border-0 p-0 m-0">
    <form id="frmEntry">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"> MIS Report </h3>
            </div>
            <div class="card-body">

                <div class="row">

                    <div class="col-sm-5">
                        @Html.LabelFor(model => model.CustomerId)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.CustomerId, new { @class = "clsCustomer", @style = "width: 100%;" })
                        </div>
                        <span id="titleError2" class="text-danger" style="display:none;"></span>
                    </div>

                    <div class="col-sm-5">
                        @Html.LabelFor(model => model.ProductId)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.ProductId, new { @class = "clsProduct", @style = "width: 100%;" })
                        </div>
                        <span id="titleError2" class="text-danger" style="display:none;"></span>
                    </div>

                </div>

                <div class="row">

                    <div class="col-sm-5">
                        @Html.LabelFor(model => model.DateFrom)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.DateFrom, new { @class = "form-control form-control-sm dateRange" })
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-5">
                        @Html.LabelFor(model => model.DateTo)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.DateTo, new { @class = "form-control form-control-sm dateRange" })
                            <div class="input-group-append">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col-sm-5">
                        @Html.LabelFor(model => model.BranchId)
                        <div class="input-group ">
                            @Html.TextBoxFor(model => model.BranchId, new { @class = " clsBranchId", @style = "width: 100%;" })
                        </div>
                        <span id="titleError2" class="text-danger" style="display:none;"></span>
                    </div>

                    <div class="col-sm-5">

                        @*@Html.LabelFor(model => model.Post, "Post")
                            <div class="input-group">
                                @Html.DropDownListFor(model => model.Post,

                                    new SelectList(new[] {
                                        new { Value = "Y", Text = "Y" },
                                        new { Value = "N", Text = "N" }
                                    }
                                    ,"Value", "Text"),"-- Select --"
                                    , new { @class = "form-control form-control-sm", @style = "width: 100%;" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Post, "", new { @class = "text-danger" })*@


                        @Html.LabelFor(model => model.Post, "Post")

                        @Html.DropDownListFor(model => model.Post,
                            new SelectList(new[] {
                                new { Value = "Y", Text = "Y" },
                                new { Value = "N", Text = "N" }
                            }, "Value", "Text", "Y"),   // <- sets Y as selected
                            "-- Select --",              // <- adds placeholder
                            new { @class = "form-control form-control-sm", @style = "width: 100%;" })






                    </div>

                </div>


                <div class="row">
                    <div class="card-body">

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsProductWise", new { @class = "form-check-input", id = "IsProductWise" })
                            <label class="form-check-label" for="IsProductWise">
                                Monthly Sales Product Wise
                            </label>
                        </div>

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsCustomerWise", new { @class = "form-check-input", id = "IsCustomerWise" })
                            <label class="form-check-label" for="IsCustomerWise">
                                Monthly Sales Customer Wise
                            </label>
                        </div>

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsSalesReport", new { @class = "form-check-input", id = "IsSalesReport" })
                            <label class="form-check-label" for="IsSalesReport">
                                Sales Report
                            </label>
                        </div>

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsInventoryReport", new { @class = "form-check-input", id = "IsInventoryReport" })
                            <label class="form-check-label" for="IsInventoryReport">
                                Inventory Report
                            </label>
                        </div>

                    </div>
                </div>


                <div class="row">
                    <div class="card-body">

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsCustomerBill", new { @class = "form-check-input", id = "IsCustomerBill" })
                            <label class="form-check-label" for="IsCustomerBill">
                                Customer Bill
                            </label>
                        </div>

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsSinglePorductInventory", new { @class = "form-check-input", id = "IsSinglePorductInventory" })
                            <label class="form-check-label" for="IsSinglePorductInventory">
                                Single Product Inventory
                            </label>
                        </div>

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsCustomerDueList", new { @class = "form-check-input", id = "IsCustomerDueList" })
                            <label class="form-check-label" for="IsCustomerDueList">
                                Customer Due List
                            </label>
                        </div>

                        <div class="form-check form-check-inline">
                            @Html.RadioButtonFor(model => model.ReportType, "IsCustomerDueListCustomerWise", new { @class = "form-check-input", id = "IsCustomerDueListCustomerWise" })
                            <label class="form-check-label" for="IsCustomerDueListCustomerWise">
                                Customer Due List Customer Wise
                            </label>
                        </div>

                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-1 mt-3">
                        <button type="button" id="ReportGenerate" class="btn btn-primary w-100">Report</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>


<script>

    $(document).ready(function () {
        var getCustomerId = $("#CustomerId").val() || 0;
        var getProduct = $("#ProductId").val() || 0;
        GetCustomerComboBox()
        GetProductComboBox()
        GetBranchList()
        InitDateRange();

        function InitDateRange() {
            $(".dateRange").daterangepicker({
                singleDatePicker: true,
                timePicker: false,
                locale: {
                    format: 'Y-MM-DD'
                },
                showDropdowns: true,
                ranges: {
                    'Today': [moment(), moment()],
                }

            });
        };

        $("#ReportGenerate").on("click", function () {
            var dateFrom = $("#DateFrom").val();
            var dateTo = $("#DateTo").val();
            var BranchId = $("#BranchId").val();
            var ProductId = $("#ProductId").val();
            var CustomerId = $("#CustomerId").val();
            var Post = $("#Post").val();

            var IsProductWise = $('#IsProductWise').prop('checked');
            var IsCustomerWise = $('#IsCustomerWise').prop('checked');
            var IsSalesReport = $('#IsSalesReport').prop('checked');
            var IsInventoryReport = $('#IsInventoryReport').prop('checked');
            var IsCustomerBill = $('#IsCustomerBill').prop('checked');
            var IsSinglePorductInventory = $('#IsSinglePorductInventory').prop('checked');
            var IsCustomerDueList = $('#IsCustomerDueList').prop('checked');
            var IsCustomerDueListCustomerWise = $('#IsCustomerDueListCustomerWise').prop('checked');

            if (!dateFrom) {
                ShowNotification(3, "Please select Date From");
                return;
            }
            if (!dateTo) {
                ShowNotification(3, "Please select Date To");
                return;
            }
            if (!BranchId) {
                ShowNotification(3, "Please select Branch Name");
                return;
            }

            if (IsSinglePorductInventory) {
                if (!ProductId) {
                    ShowNotification(3, "Please select Product Name");
                    return;
                }
            }
            if (IsCustomerDueList) {
                if (!CustomerId) {
                    ShowNotification(3, "Please select Customer Name");
                    return;
                }
            }

            if (Post == "" || Post == " ") {
                ShowNotification(3, " Please select Post Item ");
                return;
            }


            var params = {
                CustomerId: $("#CustomerId").val(),
                DateTo: $("#DateTo").val(),
                DateFrom: $("#DateFrom").val(),
                ProductId: $("#ProductId").val(),
                BranchId: $("#BranchId").val(),
                IsProductWise: IsProductWise,
                IsCustomerWise: IsCustomerWise,
                IsSalesReport: IsSalesReport,
                IsInventoryReport: IsInventoryReport,
                IsCustomerBill: IsCustomerBill,
                IsSinglePorductInventory: IsSinglePorductInventory,
                IsCustomerDueList: IsCustomerDueList,
                IsCustomerDueListCustomerWise: IsCustomerDueListCustomerWise,
                Post: Post
            };
            var query = $.param(params);
            var url = '/DMS/MISReport/MISSalesReport?' + query;
            window.open(url, "_blank");
        });

        function GetCustomerComboBox() {
            var CustomerComboBox = $(".clsCustomer").kendoMultiColumnComboBox({
                dataTextField: "Name",
                dataValueField: "Id",
                height: 400,
                columns: [

                    { field: "Code", title: "Code", width: 100 },
                    { field: "Name", title: "Name", width: 200 },
                    { field: "Address", title: "Address", width: 150 },
                    { field: "Email", title: "Email", width: 150 },
                    { field: "City", title: "City", width: 150 }

                ],
                filter: "contains",
                filterFields: ["Code", "Name", "Address", "Email", "City"],
                dataSource: {
                    transport: {
                        read: "/Common/Common/GetCustomerList"
                    }
                },
                placeholder: "Select Customer",
                value: "",
                dataBound: function (e) {

                    if (getCustomerId) {
                        this.value(parseInt(getCustomerId));
                    }
                }
            }).data("kendoMultiColumnComboBox");
        }

        function GetProductComboBox() {
            var ProductComboBox = $(".clsProduct").kendoMultiColumnComboBox({
                dataTextField: "Name",
                dataValueField: "Id",
                height: 400,
                columns: [

                    { field: "Code", title: "Code", width: 100 },
                    { field: "Name", title: "Name", width: 200 }

                ],
                filter: "contains",
                filterFields: ["Code", "Name"],
                dataSource: {
                    transport: {
                        read: "/Common/Common/GetProductList"

                    }
                },
                placeholder: "Select Product",
                value: "",
                dataBound: function (e) {

                    if (getProduct) {
                        this.value(parseInt(getProduct));
                    }
                }
            }).data("kendoMultiColumnComboBox");
        }


        function GetBranchList() {
            var branch = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/Common/Common/GetBranchList?value=",
                        dataType: "json",
                        success: function (data) {

                            for (var i = 0; i < data.length; i++) {
                                if (data[i].Id === 0 && data[i].Code === 'N/A') {
                                    data[i].Id = '';
                                    data[i].Name = 'All';
                                }
                            }
                            branch.data(data);
                        }
                    }
                }
            });

            $(".clsBranchId").kendoComboBox({
                dataTextField: "Name",
                dataValueField: "Id",
                dataSource: branch,
                filter: "contains",
                suggest: true,
                placeholder: "Select Branch"
            });
        };
    });

</script>


