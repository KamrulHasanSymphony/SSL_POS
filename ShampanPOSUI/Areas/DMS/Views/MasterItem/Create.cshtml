</div>




@section scripts{

    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/DMS/js/Controllers/MasterItemController.js"></script>

    <script>
        $(document).ready(function () {


            // Initialize jQuery UI tabs (Optional, remove if not using jQuery UI)
            $("#tabs").tabs();

            // Custom tab click event
            $('ul.tab-list li a').on('click', function (e) {
                e.preventDefault();

                var tab_id = $(this).attr('data-tab');

                $('ul.tab-list li a').removeClass('active');

                $('#tabs-1, #tabs-2, #tabs-3, #tabs-4, #tabs-5').hide();

                $('#tabs-' + tab_id).show();

                $(this).addClass('active');
            });

            $('#tabs-1').show();
            $('#tabs-2, #tabs-3,#tabs-4, #tabs-5').hide();

            MasterItemController.init();
        });

    </script>


}

