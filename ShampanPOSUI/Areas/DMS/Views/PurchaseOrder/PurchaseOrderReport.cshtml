
@model ShampanPOS.Models.PurchaseOrderVM

@{
    ViewData["Title"] = "Purchase Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial;
        background: #f2f2f2;
    }

    .report-box {
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        max-width: 900px;
        margin: 20px auto;
        border-radius: 6px;
    }

    .sslPrint {
        background: #17a2b8;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        border: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 13px;
    }

        table th, table td {
            border: 1px solid #777;
            padding: 6px;
        }

        table th {
            background: #e9e9e9;
            font-weight: bold;
        }

    .text-right {
        text-align: right;
    }

    @@media print {
        .sslPrint {
            display: none
        }

        .report-box {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>

<button onclick="window.print()" class="sslPrint" style="float:right;margin:20px;">
    <i class="k-icon k-i-print"></i> Print
</button>

<div class="report-box">

    <!-- HEADER -->
    <table style="border:none;">
        <tr>
            <td style="width:140px;border:none;">
                <img src="~/Content/AdminLte/dist/img/logo.png"
                     style="width:230px;height:120px;" />
            </td>
            <td style="text-align:right;border:none;">
                <h3 style="margin:0;">@Model.CompanyName Symphony Softtech Limited</h3>
                <div style="font-size:16px;">@Model.BranchName</div>
                <div>@Model.BranchAddress 69/1 Trhidara Tower</div>
                <div>📞 01612264439</div>
                <div>✉️ symphonysorftech1999@gamil.com</div>
            </td>

        </tr>
    </table>

    <h2 style="text-align:center;border-bottom:1px solid #000;">
        PURCHASE ORDER REPORT
    </h2>

    <h3>Purchase Information</h3>
    <table>
        <tr>
            <th>Order Code</th>
            <td>@Model.Code</td>
            <th>Order Date</th>
            <td>@Model.OrderDate</td>
        </tr>
        <tr>
            <th>Supplier</th>
            <td>@Model.SupplierName</td>
            <th>Delivery Date</th>
            <td>@Model.DeliveryDateTime</td>
        </tr>
        <tr>
            <th>Supplier Address</th>
            <td colspan="3">@Model.SupplierAddress</td>
        </tr>
        <tr>
            <th>Transaction Type</th>
            <td>@Model.TransactionType</td>
            <th>Posted</th>
            <td>@(Model.IsPost ? "Yes" : "No")</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td colspan="3">@Model.Comments</td>
        </tr>
    </table>
    <h3>Purchase Items</h3>
    <table>
        <thead>
            <tr>
                <th style="width:40px;">SL</th>
                <th>Product</th>
                <th>Code</th>
                <th class="text-right">Qty</th>
                <th class="text-right">Unit Price</th>
                <th class="text-right">Sub Total</th>
                <th class="text-right">SD Amt</th>
                <th class="text-right">VAT Amt</th>
                <th class="text-right">Others</th>
                <th class="text-right">Line Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.purchaseOrderDetailsList)
            {
                <tr>
                    <td>@item.Line</td>

                    <td>@item.ProductName</td>

                    <td>@item.ProductCode</td>

                    <td class="text-right">@item.Quantity</td>
                    <td class="text-right">@item.UnitPrice</td>
                    <td class="text-right">@item.SubTotal</td>
                    <td class="text-right">@item.SDAmount</td>
                    <td class="text-right">@item.VATAmount</td>
                    <td class="text-right">@item.OthersAmount</td>
                    <td class="text-right"><b>@item.LineTotal</b></td>
                </tr>
            }
        </tbody>
    </table>

</div>



