                                        @Html.TextBoxFor(model => model.EnumTypeId, new { @class = "form-control form-control-sm" })
                                    </div>
                                    <span id="titleError2" class="text-danger" style="display:none;"></span>
                                </div>

                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.BanglaName)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.BanglaName, new { placeholder = "Enter Sales Person Bangla Name" , @class = "form-control form-control-sm" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.BanglaName)
                                </div>
                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.Mobile)
